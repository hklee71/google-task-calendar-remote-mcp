# Google API Credentials (copy from local server .env)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here

# OAuth 2.1 Security (new for remote server)
OAUTH_SIGNING_KEY=generate_rsa_private_key_pem_format_here
SESSION_SECRET=generate_32_plus_character_random_string_here

# Application Settings
NODE_ENV=production
PORT=3001
LOG_LEVEL=info
MCP_SERVER_URL=https://task.wandermusings.com

# CORS Configuration
CORS_ORIGINS=https://claude.ai,https://api.anthropic.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security
SECURITY_HEADERS_ENABLED=true